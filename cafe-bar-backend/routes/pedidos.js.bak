// Rutas: pedidos.js
const express = require('express');
const router = express.Router();
const pedidosController = require('../controllers/pedidosController');

router.get('/activos', pedidosController.obtenerPedidosActivos);
router.get('/:id', pedidosController.obtenerPedidoPorId);
router.post('/', pedidosController.crearPedido);
router.post('/:id/productos', pedidosController.agregarProductoAPedido);
router.post('/:id/cerrar', pedidosController.cerrarPedido);
router.delete('/:id', pedidosController.cancelarPedido);

module.exports = router;
